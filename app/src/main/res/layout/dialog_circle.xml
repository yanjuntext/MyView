<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/dialog_bottom"
    android:orientation="vertical">

    <include layout="@layout/include_title_has_btn"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.wyj.widget.wheel.WheelView
            android:id="@+id/wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:wheelItemVerticalSpace="20dp"
            android:layout_gravity="center"
            app:wheelRotationX="60"
            app:wheelSelectTextColor="@color/dialog_btn" />
    </FrameLayout>

</LinearLayout>