<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/dialog_txt_white"
    app:cardCornerRadius="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_title_has_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:orientation="horizontal">

            <com.wyj.widget.wheel.WheelView
                android:id="@+id/wv_year"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:wheelItemVerticalSpace="20dp"
                app:wheelRotationX="60"
                app:wheelSelectTextColor="@color/dialog_btn" />

            <com.wyj.widget.wheel.WheelView
                android:layout_marginTop="1dp"
                android:id="@+id/wv_month"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_weight="1"
                app:wheelItemVerticalSpace="20dp"
                app:wheelRotationX="60"
                app:wheelSelectTextColor="@color/dialog_btn" />

            <com.wyj.widget.wheel.WheelView
                android:layout_marginTop="1dp"
                android:id="@+id/wv_day"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_weight="1"
                app:wheelItemVerticalSpace="20dp"
                app:wheelRotationX="60"
                app:wheelSelectTextColor="@color/dialog_btn" />

            <com.wyj.widget.wheel.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_weight="1"
                app:wheelItemVerticalSpace="20dp"
                app:wheelRotationX="60"
                app:wheelSelectTextColor="@color/dialog_btn" />

            <com.wyj.widget.wheel.WheelView
                android:id="@+id/wv_min"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_weight="1"
                app:wheelItemVerticalSpace="20dp"
                app:wheelRotationX="60"
                app:wheelSelectTextColor="@color/dialog_btn" />


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>